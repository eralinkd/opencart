<div class="container wide hero">
	<div class="content">
		<img class="image" src="{{ server }}image/home/banner.png" alt="Hero">
		<div class="decor"></div>
		<h1 class="text-white">Drone parts built for any load</h1>
		<custom-button>
			<img slot="icon" style="display: block; width: 100%; height: 100%; object-fit: contain;"
				src="{{ server }}image/icons/arrow-top-right.svg" alt="Arrow Right">
			<span slot="text">See catalog
			</span>
		</custom-button>
	</div>
</div>

<div class="container products">
	<h3 class="products-title">Featured Products</h3>
	<div class="swiper products-swiper">
		<div class="swiper-wrapper">
			{% for i in range(1, 10) %}
			<div class="swiper-slide">
				<div class="product-card">
					<div class="product-image">
						<img src="{{ server }}image/product1.png" alt="Product">
					</div>
					<div class="product-info">
						<p class="availability text-16">In Stock</p>
						<h4 class="product-title">Battery FPV 6S3P 12000mAh Li-ion Zeeepower</h4>
						<p class="text-16">Model: ZEEE12000-10-6S</p>
						<p class="product-price text-32">$35</p>
						<button-secondary class="product-button">
							<span slot="text">Add to Cart</span>
						</button-secondary>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
		<div class="swiper-pagination"></div>
	</div>
</div>

